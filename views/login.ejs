<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
	<title>AVIS MANAGEMENT</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<style>
		body{
			padding-top:80px;
			background-repeat:no-repeat;
			background-image:url(/images/accueil_background_flou.jpg);
		}
	</style>
</head>
<body>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <h1><span class="fa fa-sign-in"></span> Connection</h1>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            <form action="/login" method="post">
                <div class="form-group">
                    <label>Identifiant</label>
                    <input type="text" class="form-control" name="username">
                </div>
                <div class="form-group">
                    <label>Mot de Passe</label>
                    <input type="password" class="form-control" name="password">
                </div>
                <div class="form-group">
                    <label>Se souvenir de moi</label>
                    <input type="checkbox" class="" name="remember" value="yes">
                </div>

								<div class="form-group">
										<a href="mailto:email@admin.fr">Mot de Passe oubli√© ?</a>
								</div>

                <button type="submit" class="btn btn-warning btn-lg">Se connecter</button>
            </form>

        </div>
    </div>
</body>
</html>
