<!-- views/signup.ejs -->
<!doctype html>
<html>
<head>

	<style>
		body {
			background-repeat:no-repeat;
		}
		body.container {
			padding-top:80px;

			}
	</style>

	<% include header.ejs %>

</head>
<body>

<div class="demo-headline">
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

	<h1><span class="fa fa-sign-in"></span> Créer Compte</h1>

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<!-- LOGIN FORM -->
	<form action="/signup" method="post">
		<div class="form-group">
			<label>Identifiant</label>
			<input type="text" class="form-control" name="username">
		</div>
		<div class="form-group">
			<label>Mot de passe</label>
			<input type="password" class="form -control" name="password">
		</div>

		<div class="form-group">

			<select name="attribut" class="form-control select select-primary" data-toggle="select">
				  <option value="0" selected>Choisir type de privilège</option>
					<option value="administrateur">Administrateur</option>
					<option value="opérateur">Opérateur</option>
					<option value="utilisateur">Utilisateur</option>
			</select>
			<br>
			<select name="agence" class="form-control select select-primary" data-toggle="select">
				  	<option value="0" selected>Choisir l'agence de résidence</option>
				  	<% agence.forEach(function(agence){ %>
					<option value=<%=agence.nom%>><%=agence.nom%></option>
				  	<%})%>

			</select>

		</div>

		<button type="submit" class="btn btn-warning btn-lg">Créer le compte</button>
	</form>

</div>

</div>
</div>

</body>

</html>
