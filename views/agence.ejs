<!-- views/agence.ejs -->
<!doctype html>
<html>
	<head>
		<% include header.ejs %>
	</head>
<body>

  <h1>Ajouter agence</h1>
  <!-- local host to be changed?  -->
  <form action="/agences" method="POST">
      Nom agence :
      <input type="text" name="nom_agence" value="">
      <br>
      Adresse Agence :
      <input type="text" name="adresse_agence" value="">
      <br><br>
      <input type="submit" value="Ajouter">
  </form>

<div class="container">

  <div class="text-center">
    <h1><span class="fa fa-road"></span> Liste des agences</h1>
    <br>
  </div>

  <table  class = "table table-hover table-bordered text-center">
    <div class="text-center">
      <tr>
      <th>id agence</th>
      <th>Nom agence</th>
      <th>Adresse agence</th>
      </tr>
  </div>
    <% rows.forEach(function(agences){ %>
      <tr>
        <td> <%=agences.idAgence%></td>
        <td> <%=agences.nom%></td>
        <td> <%=agences.adresse%></td>
        <td>
          <p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-pencil"></span></button></p>
        </td>
        <td>
          <p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></p>
        </td>


      </tr>
      <%})%>
  </table>
</body>
</html>
